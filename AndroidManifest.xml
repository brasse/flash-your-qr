<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.github.qrgen"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:label="@string/app_name">
        <activity android:name=".QrGen"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".QrAppWidgetConfigure">
          <intent-filter>
            <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
          </intent-filter>
        </activity>
        <activity android:name=".WidgetConfigure">
          <intent-filter>
            <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
          </intent-filter>
        </activity>
            <receiver android:name="QrAppWidgetProvider" >
              <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
              </intent-filter>
              <meta-data android:name="android.appwidget.provider"
                         android:resource="@xml/qr_appwidget_info" />
            </receiver>
    </application>
</manifest> 
